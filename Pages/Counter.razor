@page "/counter"
<h1>Contatore Interattivo</h1>
<div class="counter-box">
    <p>
        Premi il pulsante per incrementare il valore del contatore.<br />
        Un modo semplice per vedere Blazor in azione!
    </p>
    <p>Valore attuale: <strong>@currentCount</strong></p>
    <button class="btn btn-primary" @onclick="IncrementCount">Aumenta</button>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}